{
	"name": "@lattice/worker-base",
	"version": "0.1.0",
	"description": "Base NestJS modules for Lattice Kafka workers",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"lint": "biome check src",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@lattice/core-config": "workspace:*",
		"@lattice/core-telemetry": "workspace:*",
		"@lattice/core-kafka": "workspace:*",
		"@lattice/core-contracts": "workspace:*",
		"@nestjs/common": "^10.3.0",
		"@nestjs/core": "^10.3.0",
		"@nestjs/config": "^3.1.0",
		"dd-trace": "^5.0.0",
		"newrelic": "^12.0.0",
		"kafkajs": "^2.2.4",
		"pino": "^9.0.0",
		"pino-pretty": "^11.0.0",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.0",
		"uuid": "^9.0.0",
		"zod": "^3.22.0"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@types/uuid": "^9.0.0",
		"typescript": "^5.3.0",
		"vitest": "^2.0.0"
	},
	"peerDependencies": {
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0"
	},
	"files": ["dist"],
	"engines": {
		"node": ">=20.0.0"
	}
}
