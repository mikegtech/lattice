{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "lattice.mail.attachment.v1",
	"title": "Attachment Extraction Request v1",
	"description": "Request to extract text from an email attachment",
	"type": "object",
	"properties": {
		"email_id": {
			"type": "string",
			"format": "uuid",
			"description": "Lattice email ID"
		},
		"attachment_id": {
			"type": "string",
			"format": "uuid",
			"description": "Lattice attachment ID"
		},
		"storage_uri": {
			"type": "string",
			"description": "S3 URI where attachment is stored"
		},
		"mime_type": {
			"type": "string",
			"description": "MIME type of attachment"
		},
		"filename": {
			"type": "string",
			"description": "Original filename"
		},
		"size_bytes": {
			"type": "integer",
			"minimum": 0,
			"description": "Attachment size in bytes"
		}
	},
	"required": ["email_id", "attachment_id", "storage_uri", "mime_type"],
	"additionalProperties": false
}
