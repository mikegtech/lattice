{
	"name": "@lattice/mail-parser",
	"version": "0.1.0",
	"description": "NestJS Kafka worker that parses raw emails and stores in Postgres",
	"type": "module",
	"main": "./dist/main.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsx watch src/main.ts",
		"start": "node dist/main.js",
		"start:prod": "node dist/main.js",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"lint": "biome check src",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@lattice/worker-base": "workspace:*",
		"@lattice/core-config": "workspace:*",
		"@lattice/core-telemetry": "workspace:*",
		"@lattice/core-kafka": "workspace:*",
		"@lattice/core-contracts": "workspace:*",
		"@nestjs/common": "^10.3.0",
		"@nestjs/core": "^10.3.0",
		"@nestjs/config": "^3.1.0",
		"@nestjs/platform-express": "^10.3.0",
		"pg": "^8.11.0",
		"mailparser": "^3.6.0",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.0",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@types/pg": "^8.10.0",
		"@types/uuid": "^9.0.0",
		"@types/mailparser": "^3.4.0",
		"tsx": "^4.7.0",
		"typescript": "^5.3.0",
		"vitest": "^1.2.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
