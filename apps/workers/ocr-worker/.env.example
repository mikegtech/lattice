# Kafka
KAFKA_BROKERS=localhost:29092
KAFKA_GROUP_ID=ocr-worker
KAFKA_INPUT_TOPIC=lattice.ocr.request.v1
KAFKA_OUTPUT_TOPIC=lattice.ocr.result.v1
KAFKA_DLQ_TOPIC=lattice.dlq.ocr.v1

# Database
DATABASE_URL=postgresql://lattice:lattice@localhost:5432/lattice # pragma: allowlist secret

# S3/MinIO
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin # pragma: allowlist secret
S3_FORCE_PATH_STYLE=true
S3_OCR_TEXT_BUCKET=lattice-ocr-text

# Tesseract
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng
TESSERACT_DPI=300

# Worker
PORT=3000
SERVICE_NAME=ocr-worker
LOG_LEVEL=info
