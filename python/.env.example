# Lattice Python Components - Environment Configuration
# Copy to .env and fill in actual values (DO NOT commit .env)

# =============================================================================
# Postgres
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lattice
POSTGRES_USER=lattice
POSTGRES_PASSWORD=

# =============================================================================
# MinIO / S3
# =============================================================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=
STORAGE_BUCKET=lattice-mail-raw

# For AWS S3 instead of MinIO:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# =============================================================================
# Kafka (Confluent Cloud)
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# =============================================================================
# Gmail OAuth Credentials
# =============================================================================
# Obtain from Google Cloud Console > APIs & Services > Credentials
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
# Obtain via OAuth flow with gmail.readonly + gmail.modify scopes
GMAIL_REFRESH_TOKEN=
GMAIL_USER_EMAIL=

# =============================================================================
# IMAP Credentials (WorkMail or other)
# =============================================================================
IMAP_HOST=imap.mail.us-east-1.awsapps.com
IMAP_PORT=993
IMAP_USERNAME=
IMAP_PASSWORD=
IMAP_SOURCE_FOLDER=INBOX

# =============================================================================
# Account Configuration
# =============================================================================
TENANT_ID=personal
GMAIL_ACCOUNT_ID=personal-gmail
GMAIL_ALIAS=personal-gmail
IMAP_ACCOUNT_ID=workmail-imap
IMAP_ALIAS=workmail-processed

# =============================================================================
# Processing Limits
# =============================================================================
MAX_MESSAGES=100
