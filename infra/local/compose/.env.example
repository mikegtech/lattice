# Lattice Local Development Environment
# Copy this file to .env and fill in your values

# =============================================================================
# Confluent Cloud Kafka
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=pkc-xxxxx.us-central1.gcp.confluent.cloud:9092
KAFKA_SASL_USERNAME=your-api-key
KAFKA_SASL_PASSWORD=your-api-secret

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_PASSWORD=lattice_dev_password

# =============================================================================
# Airflow
# =============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=46BKJoQYlPPOexq0OhDZnIlNepKFf87WFwLbfzqDDho=
AIRFLOW_SECRET_KEY=your-secret-key-here

# =============================================================================
# Datadog
# =============================================================================
DD_API_KEY=your-datadog-api-key
DD_SITE=datadoghq.com

# Worker tracing (set these to enable APM traces from workers)
DD_AGENT_HOST=lattice-datadog-agent
DD_TRACE_ENABLED=false
DD_TRACE_AGENT_PORT=8126
DD_DOGSTATSD_PORT=8125

# =============================================================================
# New Relic
# =============================================================================
# Telemetry provider: newrelic, datadog, or none
TELEMETRY_PROVIDER=newrelic

# New Relic license key (required for log forwarding and APM)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# New Relic API key (for Terraform/NerdGraph API)
NEW_RELIC_API_KEY=your-new-relic-api-key

# New Relic account ID
NEW_RELIC_ACCOUNT_ID=your-account-id

# New Relic region: US or EU
NEW_RELIC_REGION=US

# Enable/disable New Relic APM agent in workers
NEW_RELIC_ENABLED=true
NEW_RELIC_LOG_LEVEL=info

# =============================================================================
# New Relic Log Forwarding (Fluent Bit)
# =============================================================================
# Environment tag added to all logs
LATTICE_ENV=local

# Fluent Bit log level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# Gmail API (for production - stub for local dev)
# =============================================================================
GMAIL_CLIENT_ID=your-client-id
GMAIL_CLIENT_SECRET=your-client-secret
