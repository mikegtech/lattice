# New Relic Terraform Configuration
# Copy this file to terraform.tfvars and fill in your values

newrelic_account_id = 1234567
# User API Key (starts with NRAK-). Get from: New Relic → User menu → API Keys → Create key → User type
newrelic_api_key    = "NRAK-XXXXXXXXXXXXXXXXXXXXXXXXXXXX" # pragma: allowlist secret
newrelic_region     = "US"

environment = "production"
team        = "platform"

# =============================================================================
# Slack Notifications
# Slack destinations must be created via New Relic UI, not Terraform.
# To set up: New Relic → Alerts → Destinations → Add destination → Slack
# Then create a workflow in the UI to route alerts to Slack.
# =============================================================================

