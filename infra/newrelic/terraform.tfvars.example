# New Relic Terraform Configuration
# Copy this file to terraform.tfvars and fill in your values

newrelic_account_id = 1234567
newrelic_api_key    = "NRAK-XXXXXXXXXXXXXXXXXXXXXXXXXXXX" # pragma: allowlist secret
newrelic_region     = "US"

environment = "production"
team        = "platform"

# =============================================================================
# Native Slack Integration (Optional)
# First connect Slack in New Relic UI: Alerts → Destinations → Add destination → Slack
# Then fill in these values:
# =============================================================================

# Slack channel ID - right-click channel in Slack → View channel details → scroll to bottom
# slack_channel_id = "C0123456789"

# Slack workspace ID - find in Slack: workspace menu → Settings → Workspace settings
# slack_team_id = "T09FPD1ANU"

# OAuth token - obtained when connecting New Relic to Slack
# slack_oauth_token = "xoxb-..."

# =============================================================================
# PagerDuty Integration (Optional)
# =============================================================================
# pagerduty_service_key = "your-pagerduty-integration-key" # pragma: allowlist secret
