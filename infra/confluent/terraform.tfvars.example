# =============================================================================
# Confluent Cloud Terraform Variables Example
# =============================================================================
# Copy this file to terraform.tfvars and fill in the values
# DO NOT commit terraform.tfvars to git (it's in .gitignore)
# =============================================================================

# GCP Project ID (required for state backend and Secret Manager)
gcp_project_id = "your-gcp-project-id"

# GCP Region for Kafka cluster
gcp_region = "us-south1"

# Confluent Cloud environment and cluster names
confluent_environment_name = "lattice"
kafka_cluster_name         = "lattice"

# Cluster availability zone configuration
# SINGLE_ZONE for development, MULTI_ZONE for production
kafka_availability = "SINGLE_ZONE"

# Partition configuration
# Primary topics get more partitions for throughput
# DLQ topics use fewer partitions (low volume)
primary_partitions = 2
dlq_partitions     = 1

# Retention configuration (in milliseconds)
# Primary topics: 7 days default
# DLQ topics: 30 days (longer retention for investigation)
primary_retention_ms = 604800000   # 7 days
dlq_retention_ms     = 2592000000  # 30 days

# =============================================================================
# Sensitive Variables - Set via environment variables, NOT in this file!
# =============================================================================
#
# export TF_VAR_confluent_cloud_api_key="your-key"      # pragma: allowlist secret
# export TF_VAR_confluent_cloud_api_secret="your-secret" # pragma: allowlist secret
#
# Get these from Confluent Cloud Console → Settings → API Keys
# The key must have CloudClusterAdmin permissions on the target cluster.
# =============================================================================
