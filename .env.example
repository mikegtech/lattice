# Environment
NODE_ENV=development
ENV=dev

# Service Identity (Datadog unified tagging)
SERVICE_NAME=lattice
SERVICE_VERSION=0.1.0
TEAM=platform
CLOUD=gcp
REGION=us-central1
DOMAIN=mail
PIPELINE=mail-indexing

# Confluent Cloud Kafka
KAFKA_BOOTSTRAP_SERVERS=pkc-xxxxx.us-central1.gcp.confluent.cloud:9092
KAFKA_SASL_USERNAME=your-api-key
KAFKA_SASL_PASSWORD=your-api-secret
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN

# Postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lattice
POSTGRES_USER=lattice
POSTGRES_PASSWORD=lattice_dev_password

# Milvus
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Datadog
DD_API_KEY=your-datadog-api-key
DD_SITE=datadoghq.com
DD_ENV=dev
DD_SERVICE=lattice
DD_VERSION=0.1.0
DD_LOGS_INJECTION=true
DD_TRACE_ENABLED=true
DD_PROFILING_ENABLED=false

# Gmail API (stub for now)
GMAIL_CLIENT_ID=your-client-id
GMAIL_CLIENT_SECRET=your-client-secret

# Airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://lattice:lattice_dev_password@postgres:5432/airflow
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-base64
AIRFLOW__WEBSERVER__SECRET_KEY=your-webserver-secret
